---
import MD from '@src/components/MD.astro';
import Paginator from '@src/components/Paginator.astro';
import TagChooser from '@src/components/TagChooser.astro';
import NavbarLayout from '@src/layouts/NavbarLayout.astro';
import TagList from '@src/components/TagList.astro';

import type { Page } from 'astro';
import type { CollectionEntry } from 'astro:content';

import { Picture } from '@astrojs/image/components';
import { DateTime } from 'luxon';

interface Props {
  page: Page<CollectionEntry<"blog">>;
  tag?: string;
}

const { page, tag } = Astro.props;
const posts = page.data;

---
<NavbarLayout title="Blog">
  <div class="container tw-container">
    <header>
      <h1>Blog</h1>
      <TagChooser selectedTag={tag} />
      <div class="divider" />
    </header>
    <main>
      {posts.map((post) => {

        const date = DateTime
          .fromJSDate(post.data.date)
          .toUTC()
          .toLocaleString(DateTime.DATE_SHORT);
        const tags = post.data.tags ?? [];
        const link = `/blog/${post.slug}`;

        return (
          <article class="post">
            <div class="title">
              <div class="tags">
                <TagList tags={tags} />
              </div>
              <h3>
                <a href={link}>
                  <MD md={post.data.title} />
                </a>
              </h3>
              <time>{date}</time>
              <div class="description">
                <h4>
                  <MD md={post.data.description} />
                </h4>
              </div>
            </div>
            { post.data.image &&
              <div class="image">
                <a href={link}>
                  <Picture
                    src={post.data.image}
                    alt={post.data.title}
                    widths={[140, 280]}
                    aspectRatio="1:1"
                    sizes="(min-width: 480px) 280px, 140px"
                  />
                </a>
              </div>
            }
          </article>
        );
      })}
    </main>
    <footer>
      <Paginator page={page} />
    </footer>

  </div>
</NavbarLayout>

<script>
  import observer from '../scripts/intersection';

  const items = document.getElementsByClassName('post');

  for (let i = 0; i < items.length; i++) {
    const elem = items.item(i);
    if (elem) observer.observe(elem);
  }
</script>

<style lang="scss">
  @import "../style/common.scss";

  .container {
    @include fade-in;

    margin-left: auto;
    margin-right: auto;

    font-family: var(--font-display);
    padding: var(--size-fluid-3);

    display: grid;
    grid-template-areas:
      "header"
      "main"
      "footer";
    grid-template-columns: auto;
    @include sm-up {
      grid-template-areas:
        "main main header"
        "footer footer .";
      grid-template-columns: 1fr 1fr 1fr;
    }

    header {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: var(--size-fluid-3);
      grid-area: header;

      h1 {
        font-size: var(--font-size-fluid-3);
      }

      .divider {
        height: 2px;
        width: 50%;
        border-radius: 100%;
        background-color: var(--secondary);
        margin-top: var(--size-fluid-1);
      }

      @include sm-up {
        h1 {
          display: none;
        }
        .divider {
          display: none;
        }
      }
    }

    main {
      grid-area: main;
    }

    article {
      @include hover-background;

      &:not(:first-child) {
        margin-top: var(--size-fluid-3);
      }

      &:nth-child(odd) {
        --text-alignment: left;
        --columns: 1fr auto;

        --title-column: 1 / 2;
        --image-column: 2 / 3;

        --title-align: flex-start;
      }
      &:nth-child(even) {
        --text-alignment: right;
        --columns: auto 1fr;

        --title-column: 2 / 3;
        --image-column: 1 / 2;

        --title-align: flex-end;
      }

      padding: var(--size-fluid-2);

      display: grid;
      align-items: baseline;
      --rows: 1fr;
      
      --title-row: 1 / 2;
      --image-row: 1 / 2;

      gap: var(--size-fluid-1);
      grid-template-rows: var(--rows);
      grid-template-columns: var(--columns);

      text-align: var(--text-alignment);

      .title {
        grid-row: var(--title-row);
        grid-column: var(--title-column);
        display: flex;
        flex-direction: column;
        align-items: var(--title-align);

        h3 {
          font-size: var(--font-size-fluid-2);
          text-decoration: underline;
        }

        time {
          font-size: var(--font-size-fluid-1);
        }
        .description {
          display: none;

          @include sm-up {
            display: block;
            text-align: var(--text-alignment);
            max-width: var(--size-15);

            h4 {
              font-size: var(--font-size-fluid-0);
              font-family: var(--font-body);
            }
          }
        }

        .tags {
          display: none;
          @include sm-up {
            display: block;
          }
        }
      }

      .image {
        grid-row: var(--image-row);
        grid-column: var(--image-column);
        place-self: center;

        transition: transform 500ms var(--ease-squish-5);

        &:hover {
          transform: scale(105%);
        }
      }

      a {
        @include hover-link($subtle: true);
      }

      &.show {
        opacity: 100%;
        transform: none;
        transition: all 500ms var(--ease-out-1);
      }

      &.hide {
        opacity: 0%;
        transition: all 500ms var(--ease-out-1);
      }

      &:nth-child(odd) {
        &.hide {
          transform: translateX(-50px);
        }
      }
      &:nth-child(even) {
        &.hide {
          transform: translateX(50px);
        }
      }
    }

    footer {
      grid-area: footer;
      width: 100%;
      margin: 0 auto;
      display: flex;
      justify-content: center;
    }
  }

</style>