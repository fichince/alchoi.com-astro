---
import type { GetImageResult } from 'astro';
import { getImage } from 'astro:assets';

interface Props {
  cover: string;
  title: string;
}

const { cover, title } = Astro.props;

function isRemote(cover : string) : boolean {
  const protocol = new URL(cover).protocol;
  return protocol === 'https:' || protocol === 'http:';
}

const format = 'webp';

let image : GetImageResult;
try {
  // fetches image from remote URL
  if (isRemote(cover)) {
    image = await getImage({
      src: cover,
      inferSize: true,
      format
    });
  } else {
    // dynamic import of local image
    const resource = await import( /* @vite-ignore */ `../../images/quoteshelf/${cover}`);
    image = await getImage({
      src: resource.default,
      format
    });
  }
} catch (e) {
  console.log(`failed to load cover for ${title}`, e);
}

---
{ image && <img src={image.src} alt={title} /> }

<style lang="scss">
  img {
    max-height: var(--size-px-14);
  }
</style>
