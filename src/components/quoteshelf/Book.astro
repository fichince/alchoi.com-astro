---
import CoolBackground from '@src/components/CoolBackground.astro';
import BookCover from '@src/components/quoteshelf/BookCover.astro';
import type { CollectionEntry } from 'astro:content'
import QuoteFormatter from './QuoteFormatter.astro';

interface Props {
  book: CollectionEntry<'cmsQuoteshelf'>;
}


const { book } = Astro.props;
console.log('book', book);
const title = book.data.title;
---

<div>
  <section class="book" x-data="{ bgShift: -1, bgHover: 0 }"
    x-bind:data-bg-shift="bgShift"
    x-bind:data-bg-hover="bgHover"
    x-on:mouseenter="bgHover = 1"
    x-on:mouseleave="bgHover = 0">
    { book.data.cover && (
      <BookCover book={book} height="var(--size-px-13)" />
    )}

    <div>
    { book.data.quotes.map((quote, index) => (
      <div id={`${book.id}__${index}`} class="quote tw-prose"
        x-on:mouseenter={`bgShift = ${index} % 20`}>
        <QuoteFormatter quote={quote} />
      </div>
      <hr />
    ))}
    </div>

  </section>
  <CoolBackground />
</div>

<style lang="scss">
  @import "../../style/mixins.scss";

  .book {
    ////border: 1px solid red;
    margin: var(--size-7) 0;
    min-height: 45vh;

    display: flex;
    gap: var(--size-5);

    flex-direction: column;
    align-items: center;

    @include sm-up {
      flex-direction: row;
      align-items: start;
    }

    hr {
      width: 30%;
      margin: auto;
    }

    img {
      max-height: 250px;
      flex: 0 0 250px;
      object-fit: contain;
    }

    .quote {
      text-wrap: pretty;
      padding: var(--size-fluid-2);
      max-width: 35rem;
    }
  }
</style>
