---
import Layout from '@src/layouts/Layout.astro';
import Logo from '@src/components/Logo.astro';

const MENU = [
  { name: 'Blog', url: '/blog' },
  { name: 'Code', url: '/code' },
  { name: 'Prose', url: '/prose' },
];
---
<Layout title="Albert Choi">
  <div class="container" x-data="{ menuHover: 0 }">
    <!-- menu and title -->
    <div class="title">
      <Logo />
    </div>

    <!-- headshot -->
    <div class="headshot">
      <img src="/images/headshot.jpg" alt="headshot" />
    </div>

    <div class="subtitle">
      I write code and sometimes prose.
    </div>

    <div class="menu" x-bind:data-menu-hover="menuHover">
      {MENU.map(({ name, url }, index) => (
        <a class="menu-item" href={url} x-on:mouseover={`menuHover = ${index}`}>{name}</a>
      ))}

      <div class="background-pattern"></div>
    </div>
  </div>
</Layout>

<style lang="scss">
  @import "../style/breakpoints.scss";

  .container {
    min-width: 100vw;
    min-height: 100vh;

    display: grid;
    align-items: center;
    align-content: center;
    --justification: center;

    grid-template-areas:
      "title"
      "headshot"
      "subtitle"
      "menu";

    @include sm-up {
      --justification: end;
      grid-template-areas:
        "title headshot"
        "subtitle headshot"
        "menu headshot";
      grid-template-columns: repeat(2, 50%);
    }

    .title {
      justify-self: var(--justification);
      grid-area: title;
      width: 70%;
      margin-bottom: var(--size-fluid-4);
    }

    .headshot {
      grid-area: headshot;
      place-self: center;

      width: 60%;
      max-width: 720px;
      margin-bottom: var(--size-fluid-4);

      img {
        border-radius: 100%;
        //border: var(--size-1) solid var(--highlight);
      }
    }

    .subtitle {
      grid-area: subtitle;
      justify-self: var(--justification);

      font-family: var(--font-display);
      font-size: var(--font-size-fluid-2);
      text-align: center;
      margin-bottom: var(--size-fluid-4);
    }

    .menu {
      grid-area: menu;
      justify-self: var(--justification);

      width: 100%;

      --menu-align: center;
      @include sm-up {
        --menu-align: flex-end;
      }
      
      font-family: var(--font-display);
      font-size: var(--font-size-fluid-2);
      text-align: center;

      display: flex;
      flex-direction: column;
      align-items: var(--menu-align);

      .menu-item {
        margin: var(--size-fluid-1) var(--size-fluid-1);
        text-decoration: underline;

        transition: transform 0.25s ease-in;

        &:hover {
          color: var(--highlight);
          transform: scale(150%);
          transition: transform 0.25s ease-out;
        }
      }
    }

    .background-pattern {
      opacity: 50%;
      --background-width: 100%;
      @include sm-up {
        --background-width: 50%;
      }
      --pattern-colour: var(--primary-mid);

      background-image: radial-gradient(
        var(--pattern-colour) 15%, 
        transparent 15%
      );
      background-position: 0% 0%;
      background-size: var(--size-fluid-5) var(--size-fluid-5);
      height: 100%;
      left: 0px;
      position: absolute;
      top: 0px;
      transition: opacity 800ms ease, 
        background-size 800ms ease,
        background-position 800ms ease,
        background-image 800ms ease;
      width: var(--background-width);
      z-index: -1;
    }

    .menu[data-menu-hover="0"] > .background-pattern {
      background-position: 0% -25%;
    }
    .menu[data-menu-hover="1"] > .background-pattern {
      background-position: 0% 0%;
    }
    .menu[data-menu-hover="2"] > .background-pattern {
      background-position: 0% 25%;
    }

    .menu-item:hover ~ .background-pattern {
      background-size: var(--size-fluid-6) var(--size-fluid-6);
      opacity: 100%;
    }

  }
</style>
